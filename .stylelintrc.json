{
  "extends": ["stylelint-config-standard"],
  "ignoreFiles": [
    "**/dist/**",
    "**/*.ts",
    "**/*.js",
    "**/*.html",
    "**/*.svg",
    "**/*.png",
    "**/*.json",
    "**/*.md",
    "**/*.mjs",
    "**/_redirects",
    "**/*.cjs"
  ],
  "rules": {
    "rule-empty-line-before": "always",
    "declaration-property-value-no-unknown": true
  }
}
